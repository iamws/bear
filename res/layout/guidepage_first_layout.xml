<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="20dip"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/guidepage_first_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dip"
            android:src="@drawable/guide_first_time_fly" />

        <ImageView
            android:id="@+id/guidepage_first_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/guide_time_back" />

        <ImageView
            android:id="@+id/guidepage_first_hour_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/guide_time_point" />

        <ImageView
            android:id="@+id/guidepage_first_minute_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/guide_time_point" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/guidepage_first_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dip"
        android:src="@drawable/guide_common_next" />

</LinearLayout>